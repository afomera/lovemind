<h4>Resources</h4>
<div class="pull-right">
	<%= link_to "Add", new_resource_path, class: 'btn btn-info btn-medium' %>
</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Notes</th>
			</tr>
		</thead>
		<tbody>
<% @resources.each do |r| %>
			<tr>
				<td><%= link_to "#{r.name}", r %></td><td><%= r.address %></td><td><%= r.notes %></td>
			</tr>
<% end %>
		</tbody>
	</table>
